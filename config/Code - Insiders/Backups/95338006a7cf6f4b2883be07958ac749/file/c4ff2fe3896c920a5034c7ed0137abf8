import * as mongoose from 'mongoose';

export const ProfileSchema = new mongoose.Schema({
    first_name: {
        type: String,
        required: true
    },
    middle_name: String,
    last_name: {
        type: String,



        required: true
    },
    dob: {
        type: Date,
        default: Date.now
    },
    locations: [{
        type: {
            type: Array
        },
        street: String,
        street2: String,
        suburb: String,
        state: Array,
        postcode: Number
    }],
    comms: {
        phones: [{
            type: {
                type: Array
            },
            number: Number,R
            telco: String,
            sim_card: String
        }],
        email: [{
            type: {
                type: Array,
            },
            email: String
        }]
    },
    credentials: {
        drivers_licence: {
            licence_number: String,
            expiry: Date,
            card_no: Number,
            back_number: Number,
            state: Array,
            photo_front: Buffer,
            photo_back: Buffer
        },
        medicare_card: {
            number: Number,
            reference: Number,
            expiry: Date,
            color: Array,
            photo: Buffer 
        },
        tfn: Number,
        abn: [{
            type: Number,
            business_name: String,
            gst_reg: Boolean
        }],
        websites: [{
            url: String,
            username: String,
            password: String
        }]
    }       

})